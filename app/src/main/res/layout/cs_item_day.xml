<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="35dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:background="@drawable/bg_day_unselected">

    <TextView
        android:id="@+id/text_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textSize="12sp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/text_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold" />

    <!-- Dot indicator if that day has Task-->
    <View
        android:id="@+id/view_task_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_dot_has_task"
        android:visibility="invisible" />

</LinearLayout>